<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorItemBackground"
    android:layout_marginTop="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/homeText"
        android:layout_marginHorizontal="10dp"
        android:text="Tottenham" android:layout_gravity="left"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/awayText"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginHorizontal="10dp"
        android:text="Arsenal" android:layout_gravity="right"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:text="62'" android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText"
            android:textSize="22dp" android:text="2-0'" android:textColor="@color/colorTextPrimary"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</FrameLayout>
